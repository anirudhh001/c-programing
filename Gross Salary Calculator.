#include <stdio.h>

int main() {
    float B, HRA, DA, gross;
    scanf("%f", &B);
    if (B <= 10000) {
        HRA = 0.20 * B;
        DA = 0.30 * B;
    }
    else if (B <= 20000) {
        HRA = 0.25 * B;
        DA = 0.40 * B;
    }
    else {
        HRA = 0.30 * B;
        DA = 0.50 * B;
    }
    gross = B + HRA + DA;
    printf("%.2f", gross);
    return 0;
}
